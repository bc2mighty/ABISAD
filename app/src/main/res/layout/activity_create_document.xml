<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateDocument"
    android:layout_marginTop="30dp"
    android:padding="10dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Title Of Document"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/editTextDocTitle"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextDocTitle"
        android:hint="Enter Content Of Document"
        android:id="@+id/editTextDocContent"
        android:inputType="text"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:text="Create Document"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextDocContent"/>

</androidx.constraintlayout.widget.ConstraintLayout>